{
  "manifest_version": 3,
  "name": "Overgrown Chrome Extension",
  "version": "1.0.0",
  "description": "Overgrowth that blocks out website content the longer you have unwanted tabs open",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
